{
    "extends": ["hardcore", "hardcore/fp", "hardcore/node"],

    "env": {
        "node": true
    },

    "rules": {
        "complexity": [
            "error",
            5
        ],
        "prefer-object-spread": "off"
    },

    "overrides": [
        {
            "files": ["test/**"],

            "rules": {
                "unicorn/consistent-function-scoping": "off",
                "func-names": "off",
                "no-magic-numbers": "off"
            }
        }
    ]
}
